@model IEnumerable<Accounting.DAO.AspNetUsers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Имя пользователя")
        </th>
        <th>
            @Html.DisplayName("Роли")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
            
        <td>        
            @{Html.RenderAction("RoleList", "Admin", new { id = item.Id });}
        </td>
        <td>
           
            @Html.ActionLink("Назначить роль", "SetRole", new { id=item.Id })
        </td>
    </tr>
}

</table>
